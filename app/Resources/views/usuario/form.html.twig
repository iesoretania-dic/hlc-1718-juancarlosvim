{% extends 'layout.html.twig' %}

{% block title %}
    Usuario: {{ usuario.nombre }}
{% endblock %}

{% block content %}
    {% for mensaje in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ mensaje }}
        </div>
    {% endfor %}
    <h1>{{ usuario.nombre ? usuario.nombre : 'Nuevo usuario' }}</h1>
    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            {% if is_granted('ROLE_ADMIN') %}<button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar cambios</button>{% endif %}
            {% if usuario.id and is_granted('ROLE_ADMIN') %}<a href="{{ path('usuario_eliminar', {'id': usuario.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar Usuario</a>{% endif %}
            <!--<button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar cambios</button>-->
            <a href="{{ path('usuario_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de canciones</a>
        </div>
    </div>
    {{ form_end(formulario) }}


{% endblock %}

