{% extends 'layout.html.twig' %}

{% block title %}
    Detalle: {{ usuario.nombre }}
{% endblock %}

{% block content %}
    {% for mensaje in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ mensaje }}
        </div>
    {% endfor %}
    <h1>{{ usuario.nombre }}</h1>

    <div class="alert alert-warning">
        ¿Está seguro de que desea eliminar el Usuario? La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('usuario_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de ideas</a>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar Usuario</button>
    </form>

{% endblock %}
