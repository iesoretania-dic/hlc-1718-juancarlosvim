{% extends 'layout.html.twig' %}

{% block title %}
    Usuarios que han escuchado la canción: {{ cancion.titulo }}
{% endblock %}

{% block content %}
    <h1>Los usuarios que han esuchado la canción {{ cancion.titulo }}</h1>

    <table class="table table-bordered table-hover table-striped">
        <thead>
        <th>Nombre</th>
        <th>NombreUsuario</th>
        <th>FechaNacimiento</th>
        </thead>
        <tbody>
        {% for u in usuarios  %}
            <tr>

                <td>{{ u.nombre }}</td>
                <td>{{ u.nombreUsuario }}</td>
                <td>{{ u.fechaNacimiento  | date('d/m/Y')}}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay usuarios que mostrar</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('cancion_listar') }}"><button type="button" class="btn btn-lg btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de canciones</button></a>
{% endblock %}