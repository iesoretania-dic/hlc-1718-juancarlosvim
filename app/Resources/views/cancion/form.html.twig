{% extends 'layout.html.twig' %}

{% block title %}
    Detalle: {{ cancion.titulo }}
{% endblock %}

{% block content %}
    {% for mensaje in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ mensaje }}
        </div>
    {% endfor %}
    <h1>{{ cancion.titulo }}</h1>
    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar cambios</button>
            <a href="{{ path('cancion_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de canciones</a>
        </div>
    </div>
    {{ form_end(formulario) }}


{% endblock %}

